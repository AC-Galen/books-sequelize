  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" value="{{ book.name }}">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="isbn">ISBN</label>
    <input class="form-control" type="text" name="isbn" id="isbn" placeholder="Enter ISBN" value="{{ book.isbn }}">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="author">Author</label>
    <input class="form-control" type="text" name="author" id="author" placeholder="Enter author" value="{{ book.author }}">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="publisher">Publisher</label>
    <input class="form-control" type="text" name="publisher" id="publisher" placeholder="Enter publisher" value="{{ book.publisher }}">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="description">Description</label>
    <textarea class="form-control" id="description" name="description" rows="3">{{ book.description}}</textarea> <!-- textarea 不是用value -->
  </div>
  <button type="submit" class="btn btn-primary">提交</button>