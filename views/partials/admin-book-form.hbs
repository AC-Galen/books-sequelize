  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" value="{{ book.name }}" required/>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="categoryId">Category</label>
    <select class="form-control" id="categoryId" name="categoryId">
      {{#each categories}}
      <option value="{{this.id}}" {{#ifCond this.id ../book.categoryId}} selected{{/ifCond}}>
        {{this.name}}
        </option>
      {{/each}}
    </select>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="isbn">ISBN</label>
    <input class="form-control" type="text" name="isbn" id="isbn" placeholder="Enter ISBN" value="{{ book.isbn }}" required/>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="author">Author</label>
    <input class="form-control" type="text" name="author" id="author" placeholder="Enter author" value="{{ book.author }}" required/>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="publisher">Publisher</label>
    <input class="form-control" type="text" name="publisher" id="publisher" placeholder="Enter publisher" value="{{ book.publisher }}" required/>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="description">Description</label>
    <textarea class="form-control" id="description" name="description" rows="3" required/>{{ book.description}}</textarea> <!-- textarea 不是用value -->
  </div>
  <div class="form-row mb-3">
    <label for="form-label" for="image">圖片</label>
    <input class="form-control" type="file" class="form-control-file" id="image" name="image"> <!--input類型在file情況下,form標籤需要多一項屬性設定-->
  </div>
  <button type="submit" class="btn btn-primary">提交</button>
  <a class="btn btn-outline-secondary" href="javascript:history.back()">返回</a>