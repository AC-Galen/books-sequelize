{{> book-tabs route="TopBooks"}}
<h1>Top 10 人氣書籍</h1>
<hr />

{{#each books}}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <a href="/books/{{this.id}}">
      {{#if this.image}}
      <img src="{{this.image}}" width="140px", height="140px" tyle="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" />
      {{else}}
      <img src="https://via.placeholder.com/140" width="140px" height="140px">
      {{/if}}
      </a>
    </div>
    <div class="col-md-8">
      <div class="card body">
        <h5 class="card-title">
          <a href="/books/{{this.id}}">{{this.name}}</a>
        </h5>
        <span class="bg-secondary badge">收藏數: {{this.favoritedCount}}</span>
        <p style="white-space: break-spaces;">{{this.description}}</p>
      </div>
      <a class="btn btn-primary" href="/books/{{this.id}}">Show</a>
      {{#if isFavorited}}
      <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
      <button type="submit" class="btn btn-danger">移除最愛</button>
      </form>
      {{else}}
      <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
      <button type="submit" class="btn btn-primary">加到最愛</button>
      </form>
      {{/if}}
    </div>
  </div>
</div>
{{/each}}